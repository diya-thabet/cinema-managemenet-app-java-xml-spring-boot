<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <!-- Image as background -->
        <ImageView
            android:id="@+id/imageSpectacle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/jazz" />

        <!-- Overlay container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Information container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-8dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="#8F000000"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/titreSpectacle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titre du Spectacle"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dateSpectacle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 Mars 2025"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/heureS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="heure"
                    android:textColor="#cccccc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nomlieu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="nom de lieu"
                        android:textColor="#cccccc" />

                    <TextView
                        android:id="@+id/ville"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textColor="#cccccc" />
                </LinearLayout>

            </LinearLayout>

            <!-- Reservation button -->

            <Button
                android:id="@+id/btnReserver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-50dp"
                android:backgroundTint="#C3073F"
                android:drawableLeft="@drawable/ticket_white"
                android:drawablePadding="1dp"
                android:padding="3dp"
                android:text="RÃ©server"
                android:textSize="13dp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvComplet"
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:gravity="center"
            android:text=""

            android:textColor="#E91E1E"
            android:textSize="24sp"
            android:visibility="gone" />

    </FrameLayout>

</androidx.cardview.widget.CardView>
